                    </li>
    
                    <li class="nav-item">
                        <a class="nav-link" href="/studentHome/settings">
                            <button class="btn btn-light">
                                Settings
                            </button>
                        </a>
                    </li>
    
                    <li class="nav-item">
                        <a class="nav-link" href="/login">
                            <button class="btn btn-danger">
                                Logout
                            </button>
                        </a>
                    </li>
    
                </div>
            </nav>
            <br><br><br>
    </div>

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 container bg card bounceInDown">
            <center>
                <text class="displayName">Genaral Settings</text>
            </center>
            <br>
            <table border="0" witdth="100%">
                <h5>Name/Email Reset</h5>
                <hr>
                <tr>
                    <input type="text" class="form-control" placeholder="Type To Change your Name">
                </tr>

                <br>

                <tr>
                    <input type="text" class="form-control" placeholder="Type To Change your Email">
                </tr>
                <br>
                <tr>
                    <input type="submit" class="btn btn-info" value="Change Info">
                </tr>

                <br>

                <h5>Password Reset</h5>
                <hr>

                <tr>
                    <input type="text" class="form-control" placeholder="Type Old Password">
                </tr>
                <br>
                <tr>
                    <input type="text" class="form-control" placeholder="Type New Password">
                </tr>
                <br>
                <tr>
                    <input type="text" class="form-control" placeholder="Retype New Password">
                </tr>
                <br>
                <tr>
                    <input type="submit" class="btn btn-info" value="Reset Password">
                </tr>

                <br>
                <h5>Set Privecy</h5>
                <hr>
                <tr>
                    
                        <b>Set Phone Number :</b>
                    
                        <div class="control">
                            <label class="radio">
                              <input type="radio" name="answer">
                              Public
                            </label>
                            <label class="radio">
                              <input type="radio" name="answer">
                              Private
                            </label>
                          </div>
                    
                </tr>


                <tr>
                    
                    <b>Set Email :</b>
                    
                        <div class="control">
                            <label class="radio">
                              <input type="radio" name="answer">
                              Public [Recomended]
                            </label>
                            <label class="radio">
                              <input type="radio" name="answer">
                              Private
                            </label>
                          </div>
                    
                </tr>
                <br>
                <tr>
                     <input type="submit" class="btn btn-info" value="Save Privecy"> 
                </tr>
                <br>
            </table>
        </div>
        <div class="col-sm-3"></div>

    </div>
</body>
</html>